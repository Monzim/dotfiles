configuration {
    font:                           "Iosevka 10";
    show-icons:                     false;
    display-drun: 					"";
    drun-display-format:            "{icon} {name}";
    disable-history:                false;
	click-to-exit: 					true;
}

@import "colors.rasi"

window {
    transparency:                   "real";
    background-color:               @BG;
    text-color:                     @foreground;
    border:                  		1px;
    border-color:                  	@BDR;
    border-radius:                  10px;
    width:                          416px;
    location:                       center;
    anchor:                         center;
    x-offset:                       0;
    y-offset:                       0;
}

prompt {
    enabled: 						true;
	margin: 						0px 0px 0px 8px;
    padding:    					6px 0px 6px 0px;
	background-color: 				@BG;
	text-color: 					@foreground;
    border:                  		0px 0px 0px 0px;
    border-color:                  	@BDR;
    border-radius:                  0px;
}

textbox-prompt-colon {
	expand: 						false;
	str: 							"";
    border-radius:                  0px;
    background-color:               @BDR;
    text-color:                     @BG;
    padding:    					6px 10px 6px 10px;
	font:							"Iosevka Nerd Font 10";
}

entry {
    background-color:               @BG;
    text-color:                     @BG;
    placeholder-color:              @BG;
    placeholder:                    "";
    expand:                         true;
    horizontal-align:               0;
    blink:                          false;
    padding:                        6px;
}

inputbar {
	children: 						[ textbox-prompt-colon, prompt ];
    spacing:                        0;
    background-color:               @BG;
    text-color:                     @foreground;
    border:                  		0px 0px 1px 0px;
    border-radius:                  0px;
    border-color:                  	@BDR;
    expand:                         false;
    margin:                         0px 0px 0px 0px;
    padding:                        0px;
    position:                       center;
}

case-indicator {
    background-color:               @BG;
    text-color:                     @foreground;
    spacing:                        0;
}


listview {
    background-color:               @BG;
    columns:                        1;
    lines:							5;
    spacing:                        10px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         horizontal;
}

mainbox {
    background-color:               @BG;
    children:                       [ inputbar, listview ];
    spacing:                       	10px;
    padding:                        10px;
}

element {
    background-color:               @BG;
    text-color:                     @foreground;
    orientation:                    horizontal;
    border:                  		1px;
    border-radius:                  15px;
    border-color:                  	@BDR;
    padding:                        23.5px 25px 23.5px 25px;
}

element-icon {
    background-color: 				inherit;
    text-color:       				inherit;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    size:                           0px;
    border:                         0px;
}

element-text {
    background-color: 				inherit;
    text-color:       				inherit;
	font:							"feather 14";
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0px 0px 0px 0px;
}

element selected {
    background-color:               @BDR;
    text-color:                     @BG;
    border:                  		0px;
    border-radius:                  0px;
    border-color:                  	@BDR;
}

element.active,
element.selected.urgent {
  background-color: @on;
  text-color: @BG;
  border-color: @on;
}

element.selected.urgent {
  border-color: @BDR;
  
}

element.urgent,
element.selected.active {
  background-color: @off;
  text-color: @BG;
  border-color: @off;
}

element.selected.active {
  border-color: @BDR;
}
